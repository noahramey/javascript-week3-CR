{{#if addNewQuestion}}
  <form>
    <div class="form-group">
      <label for="author">Your Name:</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="question">Your Question:</label>
      {{input value=question id="question"}}
    </div>

    <div class="form-group">
      <label for="notes">Any Additional Notes:</label>
      {{input value=notes id="notes"}}
    </div>

    <button {{action 'save'}} class="btn btn-success">Save</button>
  </form>
{{else}}
  <button {{action 'questionFormShow'}} class="btn btn-primary">Add a Question</button>
{{/if}}
