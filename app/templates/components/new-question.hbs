<div class="form-box">
  <h2>Ask a Question!</h2>
  <form>
    <div class="form-group">
      {{input value=author id="author" placeholder="Your Name"}}
    </div>

    <div class="form-group">
      {{input value=question id="question" placeholder="Your Question"}}
    </div>

    <div class="form-group">
      {{input value=notes id="notes" placeholder="Additional Notes"}}
    </div>

    <button {{action 'save'}} class="btn btn-success">Save</button>
  </form>
</div>
