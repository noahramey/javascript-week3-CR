{{#if updateQuestionForm}}
  <h4>Update {{model.author}}'s Question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name:</label>
        {{input value=author id="author" placeholder=model.author}}
      </div>

      <div class="form-group">
        <label for="question">Question:</label>
        {{input value=question id="question" placeholder=model.question}}
      </div>

      <div class="form-group">
        <label for="notes">Notes:</label>
        {{input value=notes id="notes" placeholder=model.notes}}
      </div>

      <button {{action 'update' model}} class="btn btn-success">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}} class="btn btn-warning">Update</button>
{{/if}}
